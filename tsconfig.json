{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "es2022",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"node": true,
		"types": ["node"],
		"lib": [
			"DOM",
			"es2020"
		]
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
